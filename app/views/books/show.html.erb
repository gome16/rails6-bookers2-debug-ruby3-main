<%= render 'layouts/books_errors', book: @book %>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@show_book.user) do %>
            <%= image_tag @show_book.user.get_profile_image, size:"100x100" %><br>
            <%= @show_book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @show_book.title, @show_book %></td>
          <td><%= @show_book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(@show_book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@show_book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
      </table>
    </div>
  </div>
</div>
